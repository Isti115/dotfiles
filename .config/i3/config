bindsym Shift+XF86Forward exec --no-startup-id light -A 5 && $brightness-xob

bindsym Ctrl+XF86Back exec --no-startup-id light -U 1 && $brightness-xob
bindsym Ctrl+XF86Forward exec --no-startup-id light -A 1 && $brightness-xob

bindsym $alt+XF86Back exec --no-startup-id light -U 0.1 && $brightness-xob
bindsym $alt+XF86Forward exec --no-startup-id light -A 0.1 && $brightness-xob

bindsym XF86MonBrightnessDown exec --no-startup-id light -U 10 && $brightness-xob
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 10 && $brightness-xob

exec --no-startup-id tail -f ~/.config/xob/pipes/brightness.fifo | xob -s brightness

