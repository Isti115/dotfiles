# volume control
# exec --no-startup-id volumeicon

set $volume-xob pacmd list-sinks | pacmd list-sinks | perl -ane 'if (/(left.*%)/) {print ($F[4] =~ s/%//r)} elsif (/muted: yes/) {print q(!)} END {print qq(\n)}' > ~/.config/xob/pipes/volume.fifo

# bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $volume-xob
# bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $volume-xob

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5dB && $volume-xob
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5dB && $volume-xob

bindsym Shift+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +3dB && $volume-xob
bindsym Shift+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -3dB && $volume-xob

bindsym Ctrl+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +1dB && $volume-xob
bindsym Ctrl+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -1dB && $volume-xob

bindsym $alt+XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +0.1dB && $volume-xob
bindsym $alt+XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -0.1dB && $volume-xob

bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $volume-xob
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

exec --no-startup-id tail -f ~/.config/xob/pipes/volume.fifo | xob -s volume

# brightness

